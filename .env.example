# Branch - Reading-First Research Companion
# Environment Configuration Template
#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Never commit .env to version control!

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Database file location (SQLite)
DATABASE_URL=sqlite:///./data/branch.db

# Data directory for documents and exports
DATA_DIR=./data

# =============================================================================
# AI FEATURES (OPTIONAL)
# =============================================================================

# Enable AI-powered "Resolve Lightly" feature
ENABLE_AI_FEATURES=false

# Ollama API endpoint (for local AI)
OLLAMA_API_URL=http://localhost:11434

# Ollama model to use for lightweight assistance
OLLAMA_MODEL=llama2

# OpenAI API key (alternative to local AI, not recommended for privacy)
# OPENAI_API_KEY=sk-...

# =============================================================================
# VOICE CAPTURE (OPTIONAL)
# =============================================================================

# Enable voice capture feature
ENABLE_VOICE_CAPTURE=false

# Whisper model size (tiny, base, small, medium, large)
WHISPER_MODEL_SIZE=base

# =============================================================================
# LOGGING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=./logs/branch.log

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Enable debug mode (more verbose logging, hot reload)
DEBUG=false

# Testing mode (uses in-memory database)
TESTING=false
